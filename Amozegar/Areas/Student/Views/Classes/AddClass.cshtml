@model AddClassViewModel
@{
    ViewData["Title"] = "افزودن کلاس";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <div class="text-center mb-5">
                            <a asp-action="Index" asp-controller="Home" asp-area="">
                                <img src="~/images/home/logo.png" alt="آموزگار" class="mb-4">
                            </a>
                            <h2 class="fw-bold">ورود به کلاس</h2>
                            <p class="text-muted">وارد شوید و به جمع همکلاسیان خود بپیوندید</p>
                        </div>

                        <form method="post" novalidate>
                            @Html.AntiForgeryToken()

                            <div class="mb-4">
                                <label asp-for="@Model.ClassIdentity" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="fa-solid fa-address-book text-primary"></i>
                                    </span>
                                    <input asp-for="@Model.ClassIdentity" class="form-control">
                                </div>
                                <span class="small text-danger" asp-validation-for="@Model.ClassIdentity"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="@Model.ClassPassword" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="fa-solid fa-lock text-primary"></i>
                                    </span>
                                    <input asp-for="@Model.ClassPassword" class="form-control">
                                </div>
                                <span class="small text-danger" asp-validation-for="@Model.ClassPassword"></span>
                            </div>


                            <button type="submit" class="btn btn-primary w-100 py-3 mb-4">
                                <i class="fa-solid fa-book"></i>
                                ورود به کلاس
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

