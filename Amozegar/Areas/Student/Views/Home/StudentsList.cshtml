@model IEnumerable<StudentsListForStudentsViewModel>
@{
    ViewData["Title"] = "لیست دانش آموزان کلاس";
}


@if (Model.Count() <= 0)
{
    <div class="alert alert-warning">
        توجه. هیچ دانش آموزی در کلاس موجود نمیباشد
    </div>
}
else
{
    <div class="alert alert-light">
        تعداد کل دانش آموزان : @Model.Count().ToString()
    </div>
    <!-- Users Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <h3 class="card-title mb-4">لیست دانش آموزان کلاس</h3>

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th scope="col" style="width: 80px">تصویر</th>
                            <th scope="col">نام</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var student in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/images/users/@(student.StudentPicture)"
                                         alt="تصویر دانش آموز"
                                         class="rounded-circle"
                                         width="50"
                                         height="50"
                                         style="object-fit: cover;">
                                </td>
                                <td>@student.StudentFullName</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

}