@model EditClassViewModel
@{
    ViewData["Title"] = "ویرایش کلاس";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card border-0 shadow-sm">
	<div class="card-body p-4">
		<h3 class="card-title mb-4">ویرایش کلاس</h3>

		<form method="post" novalidate enctype="multipart/form-data">
			@Html.AntiForgeryToken()
			@Html.HiddenFor(c => c.ImagePath)

			<div class="mb-4 text-center">
				<div class="profile-picture-upload">
					<img src="~/images/classes/@Model.ImagePath" alt="تصویر پروفایل" class="profile-picture rounded-pill" width="100" height="100">
					<div class="upload-overlay">
						<label asp-for="@Model.ClassImage" for="profilePicture" class="upload-button">
							<i class="fas fa-camera"></i>
						</label>
						<input asp-for="@Model.ClassImage" id="profilePicture" class="d-none">
					</div>
				</div>
				<small class="text-muted d-block mt-2">برای تغییر تصویر پروفایل کلیک کنید</small>
				<span asp-validation-for="@Model.ClassImage" class="small text-danger"></span>
			</div>


			<div class="mb-3">
				<label asp-for="@Model.ClassIdentity" class="form-label"></label>
				<div class="input-group">
					<span class="input-group-text text-danger">*</span>
					<input class="form-control" asp-for="@Model.ClassIdentity" value="@(Model.ClassIdentity)">
				</div>
				<span asp-validation-for="@Model.ClassIdentity" class="small text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="@Model.ClassName" class="form-label"></label>
				<div class="input-group">
					<span class="input-group-text text-danger">*</span>
					<input class="form-control" asp-for="@Model.ClassName" value="@(Model.ClassName)">
				</div>
				<span asp-validation-for="@Model.ClassName" class="small text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="@Model.ClassPassword" class="form-label"></label>
				<div class="input-group">
					<span class="input-group-text"></span>
					<input class="form-control" asp-for="@Model.ClassPassword">
				</div>
				<span asp-validation-for="@Model.ClassPassword" class="small text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="@Model.ConfirmPassword" class="form-label"></label>
				<div class="input-group">
					<span class="input-group-text"></span>
					<input class="form-control" asp-for="@Model.ConfirmPassword">
				</div>
				<span asp-validation-for="@Model.ConfirmPassword" class="small text-danger"></span>
			</div>


			<a asp-action="Classes"
			asp-controller="Home"
			asp-area="Panel"
			asp-route-roleName="Teacher"
			asp-route-pageNumber = "1"
			   class="btn btn-danger px-4">لغو</a>
			<button type="submit" class="btn btn-primary px-4">
				<i class="fas fa-save me-2"></i>
				ذخیره تغییرات
			</button>

		</form>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}


