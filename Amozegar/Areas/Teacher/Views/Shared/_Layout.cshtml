@{
    ViewData["RoleName"] = "Teacher";
    Layout = "~/Areas/Shared/Views/Shared/_MainLayout.cshtml";
}

@section Sidebar
{
    <a class="menu-item" asp-action="Index" asp-controller="Home" asp-area="">
        <i class="fas fa-home"></i>
        <span>برگشت به خانه</span>
    </a>
    <a asp-action="Index" asp-controller="Home" asp-area="Teacher" asp-route-classId="@ViewBag.ClassId" class="menu-item @(ViewBag.Route == "Dashboard" ? "active" : "")">
        <i class="fas fa-tachometer-alt"></i>
        <span>داشبورد</span>
    </a>
    <a asp-action="LoginsToClass" asp-controller="Home" asp-area="Teacher" asp-route-classId="@ViewBag.ClassId" asp-route-pageNumber="1" class="menu-item @(ViewBag.Route == "LoginsToClass" ? "active" : "")">
        <i class="fa-solid fa-book-tanakh"></i>
        <span>درخواست های ورود @await Component.InvokeAsync("NotRead", new { type = "Students", classIdentity = ViewBag.ClassId })</span>
    </a>
    <a asp-action="Index" asp-controller="Students" asp-area="Shared" asp-route-classId="@ViewBag.ClassId" asp-route-roleName="Teacher" asp-route-type="Class-Students-List" asp-route-pageNumber="1" class="menu-item @(ViewBag.Type == "Class-Students-List" ? "active" : "")">
        <i class="fa-solid fa-users"></i>
        <span>لیست دانش آموزان</span>
    </a>
    <a asp-action="Index" asp-controller="Students" asp-area="Shared" asp-route-classId="@ViewBag.ClassId" asp-route-roleName="Teacher" asp-route-type="Banned-Students-List" asp-route-pageNumber="1" class="menu-item @(ViewBag.Type == "Banned-Students-List" ? "active" : "")">
        <i class="fa-solid fa-users-slash"></i>
        <span>لیست دانش آموزان مسدود شده</span>
    </a>
    <a asp-action="Notifications" asp-controller="Home" asp-area="Teacher" asp-route-classId="@ViewBag.ClassId" asp-route-pageNumber="1" class="menu-item @(ViewBag.Route == "ControlNotifications" ? "active" : "")">
        <i class="fa-solid fa-message"></i>
        <span>کنترل اعلانات</span>
    </a>
    <a asp-action="Index" asp-controller="Notifications" asp-area="Shared" asp-route-classId="@ViewBag.ClassId" asp-route-roleName="Teacher" asp-route-pageNumber="1" class="menu-item @(ViewBag.Route == "Notifications" ? "active" : "")">
        <i class="fa-solid fa-message"></i>
        <span>اعلانات @await Component.InvokeAsync("NotRead", new { type = "Notifications", classIdentity = ViewBag.ClassId })</span>
    </a>
    <a asp-action="Index" asp-controller="Homeworks" asp-area="Shared" asp-route-classId="@ViewBag.ClassId" asp-route-roleName="Teacher" asp-route-pageNumber="1" class="menu-item @(ViewBag.Route == "Homeworks" ? "active" : "")">
        <i class="fa-solid fa-pen"></i>
        <span>تکالیف</span>
    </a>
    <a asp-action="HomeworksSent" asp-controller="Homeworks" asp-area="Teacher" asp-route-classId="@ViewBag.ClassId" asp-route-pageNumber="1" class="menu-item @(ViewBag.Route == "HomeworksSent" ? "active" : "")">
        <i class="fa-solid fa-pen-to-square"></i>
        <span>تکالیف انجام شده @await Component.InvokeAsync("NotRead", new { type = "HomeworksSent", classIdentity = ViewBag.ClassId })</span>
    </a>
}

@RenderBody()
@section MyScripts {
    @await RenderSectionAsync("Scripts", required: false)
}
