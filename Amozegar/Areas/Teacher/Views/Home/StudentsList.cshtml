@model IEnumerable<StudentsListViewModel>
@{
    ViewData["Title"] = "لیست دانش آموزان کلاس";
}


@if(Model.Count() <= 0)
{
    <div class="alert alert-warning">
        توجه. هیچ دانش آموزی موجود نمیباشد
    </div>
}
else
{
    <div class="alert alert-light">
        تعداد کل دانش آموزان : @Model.Count().ToString()
    </div>
    <!-- Users Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <h3 class="card-title mb-4">لیست دانش آموزان</h3>

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th scope="col" style="width: 80px">تصویر</th>
                            <th scope="col">نام</th>
                            <th scope="col">ایمیل</th>
                            <th scope="col" style="width: 120px">عملیات ها</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach(var student in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/images/users/@(student.StudentPicture)"
                                         alt="تصویر دانش آموز"
                                         class="rounded-circle"
                                         width="50"
                                         height="50"
                                         style="object-fit: cover;">
                                </td>
                                <td>@student.StudentFullName</td>
                                <td>@student.StudentEmail</td>
                                <td>

                                    <div class="d-flex gap-2 justify-content-between align-items-center">

                                        <a asp-action="Ban"
                                           asp-controller="Students"
                                           asp-area="Teacher"
                                           asp-route-classId="@ViewBag.classId"
                                           asp-route-studentInClassId="@student.StudentInClassId"
                                           class="btn btn-danger btn-sm text-nowrap">
                                            <i class="fa-solid fa-ban me-1"></i>
                                            بن کردن
                                        </a>

                                        <a asp-action="Remove"
                                           asp-controller="Students"
                                           asp-area="Teacher"
                                           asp-route-classId="@ViewBag.classId"
                                           asp-route-studentInClassId="@student.StudentInClassId"
                                           class="btn btn-warning btn-sm text-nowrap">
                                            <i class="fa-solid fa-user-minus"></i>
                                            اخراج کردن
                                        </a>

                                    </div>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

}