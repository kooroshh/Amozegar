@model StudentsActionsViewModel
@{
    ViewData["Title"] = "رفع مسدودیت دانش آموز";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-2">
    <div class="alert alert-warning">
        آیا از رفع مسدودیت دانش آموز با نام @Model.StudentName اطمینان دارید؟ این کار باعث میشود دانش آموز توانایی درخواست ورود را داشته باشد.
        <form method="post" class="my-3">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(s => s.StudentInClassId)
            <a asp-action="Index"
               asp-controller="Home"
               asp-area="Teacher"
               asp-route-classId="@ViewBag.ClassId"
               class="btn btn-warning">برگشت به کلاس</a>
            <button type="submit" class="btn btn-danger">رفع مسدودیت</button>
        </form>
    </div>
</div>
