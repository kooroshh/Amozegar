@model EditInformationsViewModel
@{
	ViewData["Title"] = "ویرایش اطلاعات";
	ViewBag.Route = "Edit";
}

<!-- Edit Profile Form -->
<div class="card border-0 shadow-sm">
	<div class="card-body p-4">
		<h3 class="card-title mb-4">ویرایش اطلاعات کاربری</h3>

		<form method="post" novalidate enctype="multipart/form-data">
			@Html.AntiForgeryToken()
			<!-- Profile Picture -->
			<div class="mb-4 text-center">
				<div class="profile-picture-upload">
					<img src="~/images/users/@(User.FindFirstValue("Image"))" alt="تصویر پروفایل" class="profile-picture rounded-pill" width="100" height="100">
					<div class="upload-overlay">
						<label asp-for="@Model.UserPicture" for="profilePicture" class="upload-button">
							<i class="fas fa-camera"></i>
						</label>
						<input asp-for="@Model.UserPicture" id="profilePicture" class="d-none">
					</div>
				</div>
				<small class="text-muted d-block mt-2">برای تغییر تصویر پروفایل کلیک کنید</small>
				<span asp-validation-for="@Model.UserPicture" class="small text-danger"></span>
			</div>

			<!-- Personal Information -->

			<div class="mb-3">
				<label asp-for="@Model.FullName" class="form-label"></label>
				<div class="input-group">
					<span class="input-group-text"></span>
					<input class="form-control" asp-for="@Model.FullName" value="@(User.FindFirstValue("FullName"))">
				</div>
				<span asp-validation-for="@Model.FullName" class="small text-danger"></span>
			</div>


			<button type="submit" class="btn btn-primary px-4">
				<i class="fas fa-save me-2"></i>
				ذخیره تغییرات
			</button>

		</form>
	</div>
</div>


@section Scripts {
	@{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
