@model ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر رمز عبور";
    ViewBag.Route = "ChangePassword";
}

<!-- Edit Profile Form -->
<div class="card border-0 shadow-sm">
	<div class="card-body p-4">
		<h3 class="card-title mb-4">ویرایش اطلاعات کاربری</h3>

		<form method="post" novalidate>
			@Html.AntiForgeryToken()

			<div class="mb-3">
				<label asp-for="@Model.Password" class="form-label"></label>
				<input class="form-control" asp-for="@Model.Password" />
				<span asp-validation-for="@Model.Password" class="small text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="@Model.NewPassword" class="form-label"></label>
				<input class="form-control" asp-for="@Model.NewPassword" />
				<span asp-validation-for="@Model.NewPassword" class="small text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="@Model.NewConfirmPassword" class="form-label"></label>
				<input class="form-control" asp-for="@Model.NewConfirmPassword" />
				<span asp-validation-for="@Model.NewConfirmPassword" class="small text-danger"></span>
			</div>


			<button type="submit" class="btn btn-primary px-4">
				<i class="fas fa-save me-2"></i>
				ذخیره تغییرات
			</button>

		</form>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}


