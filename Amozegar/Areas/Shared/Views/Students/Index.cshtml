@model IEnumerable<StudentsListViewModel>

@if (Model.Count() <= 0)
{
	<div class="alert alert-warning">
		توجه. هیچ دانش آموزی موجود نمیباشد
	</div>
}
else
{
	<div class="alert alert-light">

		<p class="d-inline">@(ViewBag.Route == "Banned-Students-List" ? "تعداد دانش آموزان مسدود شده" : "تعداد دانش آموزان")</p>
		@ViewBag.Count

	</div>
	<!-- Users Table -->
	<div class="card border-0 shadow-sm">
		<div class="card-body p-4">

			<div class="d-flex gap-3 align-items-center mb-4">

				<h3 class="card-title mb-0">لیست دانش آموزان</h3>

				<div>
					@if (ViewBag.HasPrev)
					{
						<a asp-action="Index"
						   asp-controller="Students"
						   asp-area="Shared"
						   asp-route-classId="@ViewBag.ClassId"
						   asp-route-pageNumber="@(ViewBag.CurrentPage - 1)"
						   asp-route-roleName="@ViewBag.roleName"
						   asp-route-type="@ViewBag.Route"
						   class="btn btn-primary ">صفحه ی قبل</a>
					}
					else
					{
						<a class="btn btn-primary disabled">صفحه ی قبل</a>
					}
				</div>

				<div>
					@if (ViewBag.HasNext)
					{
						<a asp-action="Index"
						   asp-controller="Students"
						   asp-area="Shared"
						   asp-route-classId="@ViewBag.ClassId"
						   asp-route-pageNumber="@(ViewBag.CurrentPage + 1)"
						   asp-route-roleName="@ViewBag.roleName"
						   asp-route-type="@ViewBag.Route"
						   class="btn btn-primary ">صفحه ی بعد</a>
					}
					else
					{
						<a class="btn btn-primary disabled">صفحه ی بعد</a>
					}
				</div>

			</div>

			<div class="table-responsive">
				<table class="table table-hover align-middle">
					<thead>
						<tr>
							<th scope="col" style="width: 80px">تصویر</th>
							<th scope="col">نام</th>
							@if (ViewBag.Route != "Students-List")
							{
								<th scope="col">ایمیل</th>
								<th scope="col" style="width: 120px">عملیات ها</th>
							}
						</tr>
					</thead>
					<tbody>

						@foreach (var student in Model)
						{
							<tr>
								<td>
									<img src="~/images/users/@(student.StudentPicture)"
										 alt="تصویر دانش آموز"
										 class="rounded-circle"
										 width="50"
										 height="50"
										 style="object-fit: cover;">
								</td>
								<td>@student.StudentFullName</td>

								@if (ViewBag.Route != "Students-List")
								{
									<td>@student.StudentEmail</td>
									<td>

										<div class="d-flex gap-2 justify-content-between align-items-center">

											@if (ViewBag.Route == "Banned-Students-List")
											{
											<a asp-action="UnBan"
											   asp-controller="Students"
											   asp-area="Teacher"
											   asp-route-classId="@ViewBag.classId"
											   asp-route-studentInClassId="@student.StudentInClassId"
											   class="btn btn-warning btn-sm text-nowrap">
												<i class="fa-solid fa-user-minus"></i>
												رفع مسدودیت
											</a>
											}
											else
											{
												<a asp-action="Ban"
												   asp-controller="Students"
												   asp-area="Teacher"
												   asp-route-classId="@ViewBag.classId"
												   asp-route-studentInClassId="@student.StudentInClassId"
												   class="btn btn-danger btn-sm text-nowrap">
													<i class="fa-solid fa-ban me-1"></i>
													مسدود کردن
												</a>

												<a asp-action="Remove"
												   asp-controller="Students"
												   asp-area="Teacher"
												   asp-route-classId="@ViewBag.classId"
												   asp-route-studentInClassId="@student.StudentInClassId"
												   class="btn btn-warning btn-sm text-nowrap">
													<i class="fa-solid fa-user-minus"></i>
													اخراج کردن
												</a>
											}

										</div>

									</td>
								}

							</tr>
						}

					</tbody>
				</table>
			</div>
		</div>
	</div>

}

