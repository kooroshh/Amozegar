@model Report
@{
    ViewData["Title"] = "ارتباط با ما";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">فرم تماس با ما</h2>
                    <form method="post">
                        <div class="mb-4">
                            <label asp-for="@Model.FullName" class="form-label"></label>
                            <input asp-for="@Model.FullName" class="form-control">
                            <span class="text-danger small" asp-validation-for="@Model.FullName"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="@Model.Email" class="form-label"></label>
                            <input asp-for="@Model.Email" class="form-control">
                            <span class="text-danger small" asp-validation-for="@Model.Email"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="@Model.PhoneNumber" class="form-label"></label>
                            <input asp-for="@Model.PhoneNumber" class="form-control">
                            <span class="text-danger small" asp-validation-for="@Model.PhoneNumber"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="@Model.Subject" class="form-label"></label>
                            <input asp-for="@Model.Subject" class="form-control">
                            <span class="text-danger small" asp-validation-for="@Model.Subject"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="@Model.Message" class="form-label"></label>
                            <textarea class="form-control" asp-for="@Model.Message"></textarea>
                            <span class="text-danger small" asp-validation-for="@Model.Message"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-5 py-3">ارسال پیام</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
