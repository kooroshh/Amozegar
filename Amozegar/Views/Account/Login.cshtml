@model LoginViewModel
@{
    ViewData["Title"] = "ورود";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <div class="text-center mb-5">
                            <a asp-action="Index" asp-controller="Home">
                                <img src="~/images/home/logo.png" alt="آموزگار" class="mb-4">
                            </a>
                            <h2 class="fw-bold">ورود به آموزگار</h2>
                            <p class="text-muted">وارد حساب خود شوید</p>
                        </div>

                        <form method="post" novalidate>
                            @Html.AntiForgeryToken()

                            <div class="mb-4">
                                <label asp-for="@Model.Email" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="fas fa-envelope text-primary"></i>
                                    </span>
                                    <input asp-for="@Model.Email" class="form-control">
                                </div>
                                <span class="small text-danger" asp-validation-for="@Model.Email"></span>
                            </div>


                            <div class="mb-4">
                                <label asp-for="@Model.Password" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="fa-solid fa-lock text-primary"></i>
                                    </span>
                                    <input asp-for="@Model.Password" class="form-control">
                                </div>
                                <span class="small text-danger" asp-validation-for="@Model.Password"></span>
                            </div>


                            <div class="mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="@Model.RememberMe">
                                    <label class="form-check-label" asp-for="@Model.RememberMe"></label>
                                </div>
                            </div>


                            <button type="submit" class="btn btn-primary w-100 py-3 mb-4">
                                <i class="fas fa-user-plus me-2"></i>
                                ورود
                            </button>

                            <p class="text-center mb-0">
                                ثبت نام نکرده اید؟
                                <a asp-action="Register" asp-controller="Account" class="text-primary">ثبت نام در آموزگار</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
