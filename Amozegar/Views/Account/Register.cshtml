@model RegisterViewModel
@{
    ViewData["Title"] = "ثبت نام";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <div class="text-center mb-5">
                            <a asp-action="Index" asp-controller="Home">
                                <img src="~/images/home/logo.png" alt="آموزگار" class="mb-4">
                            </a>
                            <h2 class="fw-bold">ثبت نام در آموزگار</h2>
                            <p class="text-muted">به جمع ما بپیوندید</p>
                        </div>

                        <form method="post" novalidate enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <div class="mb-4">
                                <label asp-for="@Model.FullName" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="fa-solid fa-user text-primary"></i>
                                    </span>
                                    <input asp-for="@Model.FullName" class="form-control" id="profilePicture">
                                </div>
                                <span class="small text-danger" asp-validation-for="@Model.FullName"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="@Model.Email" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="fas fa-envelope text-primary"></i>
                                    </span>
                                    <input asp-for="@Model.Email" class="form-control">
                                </div>
                                <span class="small text-danger" asp-validation-for="@Model.Email"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="@Model.SelectedRole" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="fa-regular fa-circle-user text-primary"></i>
                                    </span>
                                    <select asp-items="@Model.Roles" asp-for="@Model.SelectedRole" class="form-select"></select>
                                </div>
                                <span class="small text-danger" asp-validation-for="@Model.SelectedRole"></span>
                            </div>


                            <div class="mb-4">
                                <label asp-for="@Model.UserPicture" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="fa-solid fa-image text-primary"></i>
                                    </span>
                                    <input asp-for="@Model.UserPicture" class="form-control">
                                </div>
                                <span class="small text-danger" asp-validation-for="@Model.UserPicture"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="@Model.Password" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="fa-solid fa-lock text-primary"></i>
                                    </span>
                                    <input asp-for="@Model.Password" class="form-control">
                                </div>
                                <span class="small text-danger" asp-validation-for="@Model.Password"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="@Model.ConfirmPassword" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="fa-solid fa-lock text-primary"></i>
                                    </span>
                                    <input asp-for="@Model.ConfirmPassword" class="form-control">
                                </div>
                                <span class="small text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
                            </div>


                            <button type="submit" class="btn btn-primary w-100 py-3 mb-4">
                                <i class="fas fa-user-plus me-2"></i>
                                ثبت نام
                            </button>

                            <p class="text-center mb-0">
                                قبلاً ثبت نام کرده‌اید؟
                                <a asp-action="Login" asp-controller="Account" class="text-primary">ورود به حساب کاربری</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
