
@{
    ViewData["Title"] = "صفحه پیدا نشد";
}

<div class="min-vh-100 d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <div class="error-content">
                    <i class="fas fa-exclamation-circle text-danger mb-4" style="font-size: 5rem;"></i>
                    <h1 class="display-1 fw-bold text-danger mb-4">404</h1>
                    <h2 class="mb-4">صفحه مورد نظر یافت نشد!</h2>
                    <p class="lead mb-5">متأسفانه صفحه‌ای که به دنبال آن هستید در دسترس نیست.</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a asp-action="Index" asp-controller="Home"
                            class="btn btn-primary px-4 py-2">
                            <i class="fas fa-home me-2"></i>
                            بازگشت به خانه
                        </a>
                        <a asp-action="ContactUs" asp-controller="Home"
                            class="btn btn-outline-primary px-4 py-2">
                            <i class="fas fa-envelope me-2"></i>
                            تماس با پشتیبانی
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

